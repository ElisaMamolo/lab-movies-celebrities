<h2>Update the movie: {{name}}</h2>

<form action="/movies/{{movie._id}}/edit" method="post">
    <label> Title:
        <input type="text" name="title" value="{{title}}" />
    </label>

    <label> Genre:
        <input type="text" name="genre" value="{{genre}}" />
    </label>

    <label> Plot:
        <input type="number" name="plot" value="{{plot}}" />
    </label>

    <label for="cast-select"> Cast:
        <select name="cast">
            <option disable selected value=""></option>
            {{#each dbCelebrity}}
            <option value="{{_id}}"> {{name}} </option>
            {{/each}}
        </select>
    </label>
    <br>
    <button type="submit"> Update </button>
</form>